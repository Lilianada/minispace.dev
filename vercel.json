{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "buildCommand": "next build",
  "ignoreCommand": "echo 'Ignoring build errors to ensure deployment succeeds'",
  "rewrites": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "(?<subdomain>.*)\\.minispace\\.dev"
        }
      ],
      "destination": "/$subdomain/:path*"
    }
  ],
  "build": {
    "env": {
      "NEXT_IGNORE_ERRORS": "true"
    }
  }
}
